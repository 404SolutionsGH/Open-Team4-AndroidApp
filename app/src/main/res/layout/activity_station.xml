<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.StationActivity"
    android:orientation="vertical"
    android:id="@+id/drawerLB"
    android:padding="10dp">

    <TextView
        style="@style/TextAppearance.MaterialComponents.Headline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Booking"
        android:textColor="@color/Primary"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/booking_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/img_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:cardCornerRadius="250dp">

                <ImageView
                    android:id="@+id/shuttleImg"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_foreground" />

            </androidx.cardview.widget.CardView>


            <!--Creating a TextView for name-->
            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_toEndOf="@+id/img_card"
                android:fontFamily="@font/inter"
                android:gravity="center"
                android:text="Name"
                android:textSize="12sp"
                style="@style/TextAppearance.AppCompat.Body1"/>

            <TextView
                android:id="@+id/from_loc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="5dp"
                android:layout_toEndOf="@+id/img_card"
                android:fontFamily="@font/inter"
                android:gravity="center"
                android:text="From"
                android:textSize="15sp"
                style="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/to_loc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/from_loc"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_toEndOf="@+id/img_card"
                android:fontFamily="@font/inter"
                android:gravity="center"
                android:text="To"
                android:textSize="15sp"
                style="@style/TextAppearance.AppCompat.Body1"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/to_loc"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="5dp"
                android:layout_toEndOf="@+id/img_card"
                android:fontFamily="@font/inter"
                android:gravity="center"
                android:text="Date"
                android:textSize="15sp"
                style="@style/TextAppearance.AppCompat.Body1"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/date"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="5dp"
                android:layout_toEndOf="@+id/img_card"
                android:fontFamily="@font/inter"
                android:gravity="center"
                android:text="Time"
                android:textSize="15sp"
                style="@style/TextAppearance.AppCompat.Body1"/>

            <TextView
                android:id="@+id/type"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/time"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="5dp"
                android:layout_toEndOf="@+id/img_card"
                android:fontFamily="@font/inter"
                android:gravity="center"
                android:text="Trotro Agency"
                android:textSize="15sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wheelchair"
            android:contentDescription="@string/disabled" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp">

            <AutoCompleteTextView
                android:id="@+id/disabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="none"
                android:text="@string/_0"
                android:textSize="13sp"
                android:fontFamily="@font/inter"
                android:padding="0dp"
                tools:ignore="TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/woman"
            android:contentDescription="@string/pregnant"
            android:layout_marginStart="15dp"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp">

            <AutoCompleteTextView
                android:id="@+id/pregnant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="none"
                android:text="@string/_0"
                android:textSize="13sp"
                android:fontFamily="@font/inter"
                android:padding="0dp"
                tools:ignore="TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/fare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:text="GHc 0.00"
        style="@style/TextAppearance.AppCompat.Body1"
        android:textSize="25sp"
        android:fontFamily="@font/inter" />

    <Button
        android:id="@+id/confirmBn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/Primary"
        android:text="CONFIRM BOOKING"
        android:textColor="@color/white"
        android:fontFamily="@font/inter" />

</LinearLayout>